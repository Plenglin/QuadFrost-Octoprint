<div id="tab-quadfrost" class="input-append">
    <input type="text" class="input-xxlarge" data-bind="value: serialPort">
    <button class="btn btn-primary" data-bind="click: connectToSerial">Connect</button>

    <input id="quadfrost-light" type="checkbox" class="custom-control-input" data-bind="checked: lampState">
    <label class="custom-control-label" for="lamp">Lights</label>

    <input id="quadfrost-filter" type="checkbox" class="custom-control-input" data-bind="checked: filterState">
    <label class="custom-control-label" for="lamp">Filter</label>
</div>